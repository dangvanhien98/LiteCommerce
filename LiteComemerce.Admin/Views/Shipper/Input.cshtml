@model LiteCommerce.DomainModels.Shipper
@{
    // ViewBag.Title = "Input";
    //có trong actions
}

<div class="box box-primary">
    <form role="form" action="~/Shipper/Input" method="post">
        <div class="box-header text-right">
            <a href="~/Shipper">Back to List</a>
        </div>
        <div class="box-body">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Company Name:<span style="color:red">@Html.ValidationMessage("CompanyName")</span></label>
                <input type="text" class="form-control" placeholder="Enter Company Name" name="CompanyName" value="@Model.CompanyName">
            </div>

            <div class="form-group">
                <label>Phone:</label>
                <input type="text" class="form-control" placeholder="Phone" name="Phone" value="@Model.Phone">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Shipper">
                Cancel
            </a>
        </div>
    </form>
</div>

