@model LiteCommerce.DomainModels.OrderNew
@{
    ViewBag.Title = "AddOrder";
}


<div class="box box-primary">
    <form role="form" action="~/Order/AddOrder" method="post">
        <div class="box-header text-right">
            <a href="~/Customer">Back to List</a>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label>CustomerName:<span style="color:red">@Html.ValidationMessage("CustomerID")</span></label>
                <select class="form-control" name="CustomerID">
                    <option value="">-- Choose CustomerName --</option>
                    @foreach (var cus in SelectListHelper.Customer())
                    {
                        if (Model.CustomerID == cus.Value)
                        {
                            <option value="@cus.Value" selected>@cus.Text</option>
                        }
                        else
                        {
                            <option value="@cus.Value">@cus.Text</option>
                        }

                    }
                </select>
            </div>
            <div class="form-group">
                <label>EmployeeName:<span style="color:red">@Html.ValidationMessage("EmployeeID")</span></label>
                <select class="form-control" name="EmployeeID">
                    <option value="">-- Choose EmployeeName --</option>
                    @foreach (var cus in SelectListHelper.Employee())
                    {
                        if (Model.EmployeeID == Convert.ToInt32(cus.Value))
                        {
                            <option value="@cus.Value" selected>@cus.Text</option>
                        }
                        else
                        {
                            <option value="@cus.Value">@cus.Text</option>
                        }

                    }
                </select>
            </div>
            <div class="form-group">
                <label>OrderDate<span style="color:red">@Html.ValidationMessage("OrderDate")</span></label>
                <input type="date" class="form-control" placeholder="Enter OrderDate" name="OrderDate" value="@Model.OrderDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="form-group">
                <label>RequiredDate<span style="color:red">@Html.ValidationMessage("RequiredDate")</span></label>
                <input type="date" class="form-control" placeholder="Enter RequiredDate" name="RequiredDate" value="@Model.RequiredDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="form-group">
                <label>ShippedDate<span style="color:red">@Html.ValidationMessage("ShippedDate")</span></label>
                <input type="date" class="form-control" placeholder="Enter ShippedDate" name="ShippedDate" value="@Model.ShippedDate.ToString("yyyy-MM-dd")">
            </div>
            <div class="form-group">
                <label>Shipper:<span style="color:red">@Html.ValidationMessage("ShipperID")</span></label>
                <select class="form-control" name="ShipperID">
                    <option value="">-- Choose Shipper --</option>
                    @foreach (var cus in SelectListHelper.Shipper())
                    {
                        if (Model.ShipperID == Convert.ToInt32(cus.Value))
                        {
                            <option value="@cus.Value" selected>@cus.Text</option>
                        }
                        else
                        {
                            <option value="@cus.Value">@cus.Text</option>
                        }

                    }

                </select>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Freight:<span style="color:red"></span></label>
                    <input type="number" class="form-control" placeholder="Freight" name="Freight" value="@Model.Freight">
                </div>
                <div class="col-sm-6">
                    <label>ShipAddress:<span style="color:red"></span></label>
                    <input type="text" class="form-control" placeholder="ShipAddress" name="ShipAddress" value="@Model.ShipAddress">
                </div>
            </div>
            <div class="form-group">
                <label>ShipCity:</label>
                <input type="text" class="form-control" placeholder="Address" name="ShipCity" value="@Model.ShipCity">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>ShipCountry<span style="color:red">@Html.ValidationMessage("ShipCountry")</span></label>
                    <select class="form-control" name="ShipCountry">
                        <option value="">-- Choose Country --</option>
                        @foreach (var country1 in SelectListHelper.Countries())
                        {
                            if (Model.ShipCountry == country1.Value)
                            {
                                <option value="@country1.Value" selected>@country1.Text</option>
                            }
                            else
                            {
                                <option value="@country1.Value">@country1.Text</option>
                            }

                        }

                    </select>
                </div>
               
            </div>
          

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Order/Create">
                Cancel
            </a>
        </div>
    </form>
</div>